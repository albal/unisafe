# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=UniSafe:v1.0.0 (by /u/yourusername)

# Application Configuration
NODE_ENV=production
SCAN_INTERVAL_HOURS=6
MAX_POSTS_PER_SCAN=100
SUBREDDIT=UNIFI

# Database Configuration (for reference - actual values are in docker-compose.yml)
POSTGRES_DB=unisafe
POSTGRES_USER=unisafe_user
POSTGRES_PASSWORD=unisafe_password
DATABASE_URL=postgresql://unisafe_user:unisafe_password@postgres:5432/unisafe
